{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}
